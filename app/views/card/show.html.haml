.show-card-body
  .show-card-body__box
    .show-card-body__box__header
      %p 登録クレジットカード情報
    .show-card-body__box__contents
      .show-card-body__box__contents__cards
        %p クレジットカード一覧
      .show-card-body__box__contents__card
        .show-card-body__box__contents__card__detail
          = "**** **** **** " + @default_card_information.last4
          %br
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
          = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %input{ type: "hidden", name: "card_id", value: "" }
            %button.delete 削除する

  