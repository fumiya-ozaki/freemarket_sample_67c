.user-login
  .user-login__single-container
    .user-login__single-container__header
      .user-login__single-container__header__logo-box
        = link_to (image_tag 'logo/logo.png'), items_path, class: "login-form"
    .user-login__single-container__main
      .user-login__single-container__main__login-panel
        .user-login__single-container__main__login-panel__login-no-account
          %p アカウントをお持ちでない方はこちら
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "新規会員登録", new_registration_path(resource_name), class: "signup"
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .user-login__single-container__main__login-panel__login-form-inner 
            .field
              = f.label :メールアドレス
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form"
            .field
              = f.label :パスワード
              %br/
              = f.password_field :password, autocomplete: "current-password", class: "login-form"
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :簡易ログインを許可
            .actions
              = f.submit "ログイン", class: "next"

