.user-registration
  .user-registration__header
  .user-registration__main
    .user-registration__main__container
      .user-registration__main__container__head
        %h2.user-registration__main__container__head__text{style: 'font-size:22px; padding:32px; font-weight:bold;'} ユーザー登録
      = form_for(@user, url: user_registration_path) do |f|
        = render "devise/shared/error_messages", resource: @user
        .form-box
          .field
            = f.label :ニックネーム
            %span.necessary 必須
            %br/
            = f.text_field :nickname, autofocus: true, maxlength: "10", class: "form"
          .field
            = f.label :Eメール
            %span.necessary 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form"
          .field
            = f.label :電話番号
            %br/
            = f.text_field :phone_number, autofocus: true, maxlength: "12", class: "form"
          .field
            = f.label :パスワード
            %span.necessary 必須
            %br/
            = f.password_field :password, autocomplete: "new-password", class: "form"
          .field
            = f.label :パスワード再入力
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "form"
          .field
            = f.label :お名前
            %span.necessary 必須
            %br/
            .field__name
              = f.text_field :last_name, autofocus: true, maxlength: "5", class: "form-name name-left"
              = f.text_field :first_name, autofocus: true, maxlength: "5", class: "form-name name-right"
          .field
            = f.label :お名前カナ
            %span.necessary 必須
            %br/
            .field__name
              = f.text_field :last_name_kana, autofocus: true, maxlength: "20", class: "form-name name-left"
              = f.text_field :first_name_kana, autofocus: true, maxlength: "20", class: "form-name name-right"
          .field
            = f.label :生年月日
            %span.necessary 必須
            %br/
            .field__birth
              = f.text_field :birth_year, autofocus: true, maxlength: "4", class: "year form-birth"
              %span.birthday 年
              = f.text_field :birth_month, autofocus: true, maxlength: "2", class: "month form-birth"
              %span.birthday 月
              = f.text_field :birth_date, autofocus: true, maxlength: "2", class: "date form-birth"
              %span.birthday 日
          .actions
            = f.submit "次へ進む", class: "next"
          .space


