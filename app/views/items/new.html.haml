.main
  .show_main
    .content
      .item_box
        .item_box__item_title
          商品の情報を入力
        %hr
        .column_title
          .column_title__wrapper
            %h1 出品画像
            %p 必須
          %span 最大10枚まで登録できます
        .image_form
          = form_with model: @item do |f|
            = f.fields_for :images do |img|
              = img.file_field :image,class: "items_form"
              
            %hr
            .column_title
              .column_title__wrapper
                %h1 商品名
                %p 必須
            = f.text_field :name,placeholder: "商品名（必須40文字まで)" , class: "items_form-a"
            .column_title
              .column_title__wrapper
                %h1 商品の説明
                %p 必須
            = f.text_field :description,placeholder: "商品の説明（必須1000文字以内）" , class: "items_form-b"
            %hr

            .split
              %span 商品の詳細
              .item_detail_right
                .column_title
                  .column_title__wrapper
                    %h1 カテゴリ
                    %p 必須
                = f.text_field :categories_id, class: "items_form-c"
                .column_title
                  .column_title__wrapper
                    %h1 商品の状態
                    %p 必須
                = f.text_field :condition, class: "items_form-c"
            %hr

            .split
              %span 配送について
              .item_detail_right
                .column_title
                  .column_title__wrapper
                    %h1 配送料の負担
                    %p 必須
                = f.text_field :postage, class: "items_form-c"
                .column_title
                  .column_title__wrapper
                    %h1 発送元の地域
                    %p 必須
                = f.text_field :region, class: "items_form-c"
                .column_title
                  .column_title__wrapper
                    %h1 発送までの日数
                    %p 必須
                = f.text_field :shipping_date, class: "items_form-c"
            %hr

            .split
              %span 販売価格（300~9,999,999）
              .split
                .column_title
                  .column_title__wrapper
                    %h1 価格
                    %p 必須
                = f.text_field :price,placeholder: "例) 300", class: "items_form-d"
            %hr
            - if user_signed_in?
              = f.hidden_field :seller_id, value: current_user.id # ユーザーに入力させることなくseller_idをテーブルに保存させるため
            = f.hidden_field :status, value: "exibiting" # ユーザーに入力させることなくstatusを出品中にするため
            
            
            = f.submit "出品する" ,class: "send_btn"
            = link_to "もどる", "#", class: "back_btn"


